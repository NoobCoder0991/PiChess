  :root {
  --body-color: #312e2b;
  --primary: rgb(23, 23, 23);
  --default-color: #bababa;
  --accent: rgb(205, 40, 18);
  --secondary: #5f8805;
  --square-width: 3.5vw;
  --square-width-mobile: 12vw;
  }
  ::-webkit-scrollbar {
  display: none;
  }
  body {
  background-color: var(--body-color);
  color: var(--default-color);
  font-family: "Mukta", sans-serif;
  font-weight: 400;
  font-style: normal;
  height: 100%;
  overflow: scroll;
  z-index: 0;
  }
  .main {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin: 1vw;
  }
  .content {
  display: flex;
  }
  .options {
  background-color: #333;
  width: 20vw;
  margin: 0 1vw;
  border-radius: 5px;
  height: 100%;
  }
  .option {
  padding: 0.5vw 1vw;
  cursor: pointer;
  background-color: #222;
  }
  .active-option {
  background-color: var(--secondary);
  }
  .option-details {
  background-color: #222;
  padding: 1%;
  min-width: 50vw;
  border-radius: 5px;
  }
  .logo {
  font-size: x-large;
  cursor: pointer;
  font-weight: bold;
  color: var(--secondary);
  }
  .profile-details {
  display: flex;
  flex-direction: column;
  }
  .profile-details>div {
  margin: 1vw 0;
  }
  .profile-image {
  height: 100%;
  border-radius: 5px;
  }
  .profile {
  display: flex;
  height: 22vh;
  }
  .profile>div {
  margin-right: 1vw;
  }
  .slogan {
  font-size: medium;
  color: grey;
  }
  .rating {
  font-size: large;
  font-weight: bold;
  color: goldenrod;
  }
  .user-title {
  background-color: #444;
  padding: 0 0.5vw;
  color: goldenrod;
  }
  .chess-info-component {
  display: flex;
  }
  .career {
  display: flex;
  width: 100%;
  justify-content: space-around;
  }
  .career>div {
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: #333;
  align-items: center;
  width: 20%;
  }
  .games-won{
    background-color:red;
  }
  .profile-actions {
  display: flex;
  width: 100%;
  }
  .profile-action {
  width: 100%;
  }
  .danger-zone {
  background-image: linear-gradient(to right, rgba(255, 0, 0, 0.2), rgba(255, 0, 0, 0.1));
  padding: 1vw;
  }
  .change-password {
  display: flex;
  flex-direction: column;
  align-items: center;
  }
  .change-password>div {
  width: 95%;
  margin: 1% 0;
  }
  .about {
  display: flex;
  flex-direction: column;
  }
  .about-textarea {
  background-color: #222;
  outline: none;
  color: #fff;
  width: 100%;
  height: 20vh;
  border-radius: 5px;
  font-family: "Mukta", sans-serif;
  }
  textarea {
  resize: none;
  }
  .big-button {
  cursor: pointer;
  border-radius: 3px;
  padding: 0.5vw 0.5vw;
  box-shadow: 3px 0px 0px rgba(93, 131, 5, 0.6), 3px 0px 0px rgba(120, 180, 15, 0.6);
  background-image: linear-gradient(to bottom, #6d9e05, #5f8805);
  color: white;
  }
  .big-button:hover {
  background-image: linear-gradient(to bottom, #77aa09, #6d9c06);
  }
  .save-button {
  align-self: center;
  padding: 0.5vw 2vw;
  /* width: 20%; */
  }
  .input {
  background-color: #222;
  outline: none;
  border: 1px solid rgb(77, 73, 73);
  padding: 1%;
  font-size: 15px;
  width: 98%;
  border-radius: 3px;
  color: var(--default-color);
  }
  .input:focus {
  box-shadow: 0px 0px 3px var(--secondary);
  }
  .submit-button-input {
  border: none;
  }
  .danger-zone-actions {
  display: flex;
  }
  .danger-action {
  background-color: var(--accent);
  padding: 0.5%;
  border-radius: 5px;
  margin: 0 1%;
  cursor: pointer;
  }
  .advanced-footer {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 100vw;
  display: flex;
  justify-content: center;
  align-items: center;
  }
  .footer-links {
  color: var(--default-color);
  font-size: small;
  width: 100%;
  text-align: center;
  /* text-wrap: nowrap; */
  }
  .footer-link {
  color: grey;
  margin: 0 0.5%;
  }
  .footer-link:hover {
  color: white;
  }
  .footer-options {
  display: flex;
  justify-content: center;
  align-items: center;
  color: grey;
  font-size: xx-large;
  width: 100vw;
  }
  .footer-options>div {
  margin-right: 2vw;
  }
  .footer-option {
  color: grey;
  text-wrap: nowrap;
  margin: 0 0.5vw;
  }
  .footer-option:hover {
  color: white;
  }
